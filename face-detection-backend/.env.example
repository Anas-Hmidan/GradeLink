# Cheating Detection API - Environment Configuration
# Copy this to .env and modify as needed

# Server Configuration
API_HOST=0.0.0.0
API_PORT=5000
DEBUG_MODE=False

# Storage Paths
SUSPICIOUS_FRAMES_DIR=suspicious_frames
LOG_DIR=logs

# Face Detection Thresholds
FACE_CONFIDENCE_THRESHOLD=0.5
FACE_VISIBILITY_THRESHOLD=0.08
EDGE_MARGIN_PIXELS=5

# Performance & Rate Limiting
FRAME_SAVE_COOLDOWN=5
MIN_SUSPICIOUS_DURATION=1
FRAME_PROCESS_INTERVAL=1

# Logging
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Security
MAX_FRAME_SIZE_MB=5
MAX_BATCH_SIZE=100
ALLOWED_ORIGINS=*
